<br/>

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn Something Today</h1>
  <hr/>

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course_path(course) do%>
        <%= course.title %>
        <br/>
        <% if course.image.url != nil %>
          <%= image_tag course.image.url, class: 'img_fluid course-image' %>
          <% end %>
      <% end %>
    </h2>
    <br/>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-12 text-center">
        <%= link_to 'Button', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <br class="clr"/>
  <% end %>
</div>